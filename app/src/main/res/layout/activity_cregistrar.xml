<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cregistrar"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#406DE1"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LISTA DE CLIENTES"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@android:color/white"
        android:elevation="6dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="472dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="REGISTRO:"
                android:textColor="#406DE1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="6"
                android:rowCount="6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="40dp"
                    android:text="DNI : "
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:text="APELLIDOS : "
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:text="NOMBRE : "
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:text="TEEFONO : "
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:text="CORREO : "
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:text="DIRECCION : "
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtDNICLIENTE"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginTop="40dp"
                    android:alpha="0.5"
                    android:hint="Ingrese DNI"
                    android:inputType="number"
                    android:maxLength="8"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />


                <EditText
                    android:id="@+id/txtAPELLIDOCLIENTE"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginTop="20dp"
                    android:alpha="0.5"
                    android:hint="Ingrese Apellido"
                    android:maxLength="20"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/txtNOMBRECLIENTE"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_marginTop="20dp"
                    android:alpha="0.5"
                    android:hint="Ingrese Nombre"
                    android:maxLength="20"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/txtTELEFONOCLIENTE"
                    android:layout_width="228dp"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_marginTop="20dp"
                    android:alpha="0.5"
                    android:hint="Ingrese Telefono"
                    android:maxLength="20"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/txtCORREOCLIENTE"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_marginTop="20dp"
                    android:alpha="0.5"
                    android:hint="Ingrese Correo"
                    android:maxLength="20"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/txtDIRECCIONCLIENTE"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_marginTop="20dp"
                    android:alpha="0.5"
                    android:hint="Ingrese DirecciÃ³n"
                    android:maxLength="20"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />


            </GridLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:columnCount="3"
        android:rowCount="1">

        <Button
            android:id="@+id/btnRegistroCL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#4664E0"
            android:text="Registrar" />

        <Button
            android:id="@+id/btnLimpiarCL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#4664E0"
            android:text="Limpiar" />

        <Button
            android:id="@+id/btnCancelarRegisterCL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#4664E0"
            android:text="Canelar" />

    </GridLayout>





</LinearLayout>